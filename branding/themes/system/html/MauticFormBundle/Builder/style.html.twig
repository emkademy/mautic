{# Absurd test styling to verify overrides are active #}
<style type="text/css" scoped>
    {% set bg = 'linear-gradient(135deg, #ff00ff, #00ffff)' %}

    @keyframes wobble {
        0% { transform: rotate(-1deg); }
        50% { transform: rotate(1deg) scale(1.02); }
        100% { transform: rotate(-1deg); }
    }
    @keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(255,0,255,0.6); }
        50%      { box-shadow: 0 0 0 10px rgba(0,255,255,0.3); }
    }

    .mauticform_wrapper {
        max-width: 720px;
        margin: 20px auto;
        padding: 20px;
        font-family: "Comic Sans MS", "Comic Neue", cursive;
        background: {{ bg }};
        border: 8px dashed #111;
        color: #111;
        animation: wobble 2s infinite ease-in-out;
    }

    .mauticform-name {
        font-size: 2rem;
        font-weight: 900;
        color: #111;
        text-transform: uppercase;
        letter-spacing: 3px;
        text-shadow: 2px 2px 0 #fff, -2px -2px 0 #0ff;
    }

    .mauticform-description { font-style: italic; color: #222; }

    .mauticform-row { margin-bottom: 22px; }

    .mauticform-label {
        font-size: 1.1rem;
        font-weight: 800;
        color: #111;
        text-decoration: underline wavy #0ff;
    }
    .mauticform-row.mauticform-required .mauticform-label:after {
        content: " (MUST!)";
        color: #f00;
        font-weight: 900;
    }

    .mauticform-input,
    .mauticform-textarea,
    .mauticform-selectbox {
        width: 100%;
        padding: 12px 14px;
        border: 4px solid #000;
        border-radius: 12px;
        background: #fff200;
        color: #000;
        box-shadow: 4px 4px 0 #000;
        transition: transform .15s ease, box-shadow .15s ease;
    }
    .mauticform-input:focus,
    .mauticform-textarea:focus,
    .mauticform-selectbox:focus {
        transform: translate(-2px, -2px) rotate(-1deg);
        box-shadow: 8px 8px 0 #ff00ff;
        outline: none;
    }

    .mauticform-errormsg,
    .mauticform-error { color: #ff0000; font-weight: 800; }
    .mauticform-message { color: #00aa00; font-weight: 800; }

    .mauticform-button-wrapper .mauticform-button {
        padding: 12px 22px;
        font-size: 1rem;
        font-weight: 900;
        color: #fff;
        background: repeating-linear-gradient(45deg, #ff00ff 0 10px, #00ffff 10px 20px);
        border: 4px solid #000;
        border-radius: 999px;
        text-transform: uppercase;
        animation: pulse 1.6s infinite;
        cursor: pointer;
        box-shadow: 6px 6px 0 #000;
        transition: transform .1s ease, box-shadow .1s ease;
    }
    .mauticform-button-wrapper .mauticform-button:hover {
        transform: translate(-2px, -2px);
        box-shadow: 10px 10px 0 #ff00ff;
    }
    .mauticform-button-wrapper .mauticform-button:active {
        transform: translate(0, 0) scale(0.98);
        box-shadow: 4px 4px 0 #000;
    }

    .mauticform-helpmessage {
        font-size: 0.95rem;
        color: #000;
        background: #fff;
        display: inline-block;
        padding: 6px 10px;
        border: 3px dotted #000;
    }
</style>
