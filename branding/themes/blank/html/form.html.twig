{% extends "@themes/"~template~"/html/base.html.twig" %}

{# Force-load the theme's custom form styles #}
{% block content %}
    {% include '@themes/blank/html/MauticFormBundle/Builder/style.html.twig' %}

    {% if message is defined %}
        <div>
            <p>{{ message|raw }}</p>
        </div>
    {% endif %}

    <div>
        {% if header is defined %}
        <h4>{{ header }}</h4>
        {% endif %}
        {{ content|raw }}
    </div>
{% endblock %}
